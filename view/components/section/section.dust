{! This component can accept an option content flag !}

<section 
  {?data.content-flag}
    id="content" 
  {/data.content-flag}
  {?data.display} 
    {>"components__display" data=data /} 
  {/data.display}
> 
  <div class="container">
    {#data.components}
      {>"components__{name}" name=name data=data/}
    {/data.components}
  </div>
</section>
